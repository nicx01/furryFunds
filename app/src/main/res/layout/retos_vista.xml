<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vistaRetos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/verdemediobajo">

    <TextView
        android:id="@+id/textRetoITem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="328dp"
        android:layout_marginBottom="8dp"
        android:text="Reto 1:"
        android:textColorLink="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textFurroNickReto"
        app:layout_constraintStart_toEndOf="@+id/imageButton2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textFurroNickReto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="8dp"
        android:text="FurroNick"
        android:textColorLink="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageButton2"
        app:layout_constraintTop_toBottomOf="@+id/textRetoITem" />

    <TextView
        android:id="@+id/textDescripcionReto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="8dp"
        android:text="Reto"
        android:textColorLink="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageButton2"
        app:layout_constraintTop_toBottomOf="@+id/textFurroNickReto" />

    <ToggleButton
        android:id="@+id/toggleButtonMarcaRetoHechoSinHacer"
        android:layout_width="126dp"
        android:layout_height="110dp"
        android:layout_marginTop="308dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="313dp"
        android:backgroundTint="@color/verdesuperoscuro"
        android:text="ToggleButton"
        android:textColor="@color/verdemediobajo"
        android:textOff="SIN HACER"
        android:textOn="CONSEGUIDO"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="310dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="311dp"
        android:backgroundTint="@color/verdeoscuro"
        android:contentDescription="boton ajustes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textRetoITem"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ajustes_foreground" />
    <include layout="@layout/toolbar_perfil"/>
</androidx.constraintlayout.widget.ConstraintLayout>