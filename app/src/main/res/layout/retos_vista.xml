<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vistaRetos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/verdemediobajo">

    <TextView
        android:id="@+id/textRetoITem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="328dp"
        android:layout_marginBottom="8dp"
        android:text="Reto 1:"
        android:textColorLink="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textFurroNickReto"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="167dp" />

    <TextView
        android:id="@+id/textFurroNickReto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="FurroNick"
        android:textColorLink="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/textRetoITem"
        tools:layout_editor_absoluteX="167dp" />

    <TextView
        android:id="@+id/textDescripcionReto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Reto"
        android:textColorLink="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/textFurroNickReto"
        tools:layout_editor_absoluteX="167dp" />

    <ToggleButton
        android:id="@+id/toggleButtonMarcaRetoHechoSinHacer"
        android:layout_width="126dp"
        android:layout_height="110dp"
        android:layout_marginTop="308dp"
        android:backgroundTint="@color/verdesuperoscuro"
        android:text="ToggleButton"
        android:textColor="@color/verdemediobajo"
        android:textOff="SIN HACER"
        android:textOn="CONSEGUIDO"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="255dp" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:backgroundTint="@color/verdeoscuro"
        app:srcCompat="@mipmap/ajustes_foreground"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="310dp" />

</androidx.constraintlayout.widget.ConstraintLayout>