<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vistaRetos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/verdemediobajo">

    <Button
        android:id="@+id/buttonOpcionesDelReto"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:text="Button"
        android:textColor="@color/verdemediobajo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.131"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textRetoITem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="328dp"
        android:layout_marginBottom="8dp"
        android:text="Reto 1:"
        android:textColorLink="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textFurroNickReto"
        app:layout_constraintStart_toEndOf="@+id/buttonOpcionesDelReto"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textFurroNickReto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="8dp"
        android:text="FurroNick"
        android:textColorLink="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/buttonOpcionesDelReto"
        app:layout_constraintTop_toBottomOf="@+id/textRetoITem" />

    <TextView
        android:id="@+id/textDescripcionReto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="8dp"
        android:text="Reto"
        android:textColorLink="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/buttonOpcionesDelReto"
        app:layout_constraintTop_toBottomOf="@+id/textFurroNickReto" />

    <ToggleButton
        android:id="@+id/toggleButtonMarcaRetoHechoSinHacer"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_marginStart="144dp"
        android:layout_marginTop="328dp"
        android:backgroundTint="@color/verdesuperoscuro"
        android:text="ToggleButton"
        android:textColor="@color/verdemediobajo"
        android:textOff="SIN HACER"
        android:textOn="CONSEGUIDO"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/buttonOpcionesDelReto"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>